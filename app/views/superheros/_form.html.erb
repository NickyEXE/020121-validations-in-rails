<%= form_for @superhero do |f| %>
  <% if @superhero.errors.any? %>
    <p><%= pluralize(@superhero.errors.count, "error") %> prevented this from being saved:</p>
    <ul>
      <% @superhero.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  <% end %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :power %>
  <%= f.text_field :power %>
  <%= f.label :power_level %>
  <%= f.number_field :power_level, in: (1..10) %>
  <%= f.label :good %>
  <%= f.check_box :good %>
  <%= f.submit %>
<% end %>
